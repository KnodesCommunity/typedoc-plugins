                "children": [
                    {
                        "title": "Using options",
                        "source": "options.md"
                    }
                ]
            },
            {
                "title": "@knodes/typedoc-plugin-pages",
                "moduleRoot": true,
                "source": "readme-extras.md",
                "children": [
                    {
                        "title": "Using options",
                        "source": "options.md"
                    },
                    {
                        "title": "Pages tree",
                        "source": "pages-tree.md"
                    }
                ]
            },
            {
                "title": "@knodes/typedoc-pluginutils",
                "moduleRoot": true,
