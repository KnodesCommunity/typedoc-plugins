{
  "name": "@knodes/typedoc-plugins",
  "version": "0.0.1",
  "description": "A monorepo containing all knodes-published TypeDoc plugins",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KnodesCommunity/typedoc-plugins.git"
  },
  "bugs": {
    "url": "https://github.com/KnodesCommunity/typedoc-plugins/issues"
  },
  "homepage": "https://github.com/KnodesCommunity/typedoc-plugins#readme",
  "author": {
    "email": "gerkin@knodes.org",
    "name": "GerkinDev"
  },
  "keywords": [
    "typedocplugin",
    "documentation"
  ],
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "format:pkg": "format-package --write",
    "lint": "eslint --ignore-path ./.eslintignore '**/?(.)*.?([cm])[tj]s'",
    "precommit": "npm --workspaces run lint -- --cache && npm --workspaces run test -- --only-changed && npm --workspaces run build",
    "prepare": "npm run prepare:husky",
    "prepare:husky": "[ -d ./node_modules/husky ] && husky install || true",
    "release:do": "standard-version -a",
    "release:trigger": "git commit --allow-empty -m \"ci(release): trigger release\"",
    "test:ci": "JEST_JUNIT_OUTPUT_NAME=junit.xml jest --all --ci --reporters=default --reporters=jest-junit --collectCoverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore: {{currentTag}}\n\n[skip ci]"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@knodes/eslint-config": "1.6.3",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "eslint": "8.9.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsdoc": "37.9.4",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-sort-export-all": "1.2.1",
    "format-package": "6.1.0",
    "glob": "7.2.0",
    "husky": "7.0.4",
    "jest-junit": "13.0.0",
    "semver": "7.3.5",
    "typedoc": "0.22.12",
    "typescript": "4.5.5"
  }
}
